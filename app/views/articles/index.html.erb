<div class="container">
  <h1>Listing Articles</h1>
  
  <table class="table">
    <tr>
      <th scope="col">Title</th>
      <th scope="col" colspan="3"></th>
    </tr>
   
    <% @articles.each do |article| %>
      <tr scope="row">
        <td><%= article.title %></td>
        <td><%= link_to 'Show', article_path(article), class:"badge badge-primary" %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class:"badge badge-dark" %></td>
        <td><%= link_to 'Destroy', article_path(article),
                method: :delete,
                data: { confirm: 'Are you sure?' }, class:"badge badge-danger" %></td>
      </tr>
    <% end %>
  </table>
  <%= link_to 'New article', new_article_path, class:"btn btn-primary" %>
</div>